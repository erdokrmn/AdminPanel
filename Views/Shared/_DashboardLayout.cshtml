<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- Dashboard'a özel CSS -->
    <link rel="stylesheet" href="@Url.Content("~/css/dashboard.css")" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container">
        <aside class="sidebar">
            <h2 class="logo">Admin.</h2>
            <nav class="nav">
                <a asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                <a asp-controller="Dashboard" asp-action="Tickets">Tickets</a>
                <a asp-controller="Dashboard" asp-action="Users">Users</a>
                <a asp-controller="Dashboard" asp-action="Settings">Settings</a>
            </nav>
        </aside>

        <main class="main-content">
            <header class="topbar">
                <div class="topbar-left">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="topbar-right">
                    <div class="profile">
                        <img src="https://via.placeholder.com/40" alt="Profile" />
                        <span>Admin</span>
                    </div>
                </div>
            </header>

            <section class="content">
                @RenderBody()
            </section>
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
